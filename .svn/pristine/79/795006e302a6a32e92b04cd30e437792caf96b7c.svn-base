data EstadoGloss = EstadoGloss {menu :: Bool, -- ^ Verifica se está no menu ou dentro do jogo
                                imagens :: [[Picture]], -- ^Imagens usadas no mapa
                                nJog :: Int, -- ^Numero de jogadores
                                tMenu :: Picture -- ^Picture do menu em que está
                                mapa :: Mapa 
                               } 

estadoI :: [[Picture]] -> EstadoGloss
estadoI a = EstadoGloss { menu = True,imagens = a, nJog = 1, tMenu = (head a) !! 0,mapa = [[Bloco Indestrutivel,Bloco Indestrutivel,Bloco Indestrutivel,Bloco Indestrutivel],[Bloco Indestrutivel,Vazia,Vazia,Bloco Indestrutivel],[Bloco Indestrutivel,Vazia,Vazia,Bloco Indestrutivel],[Bloco Indestrutivel,Bloco Indestrutivel,Bloco Indestrutivel,Bloco Indestrutivel]]}

reageEvento :: Event -> EstadoGloss -> EstadoGloss
reageEvento f estado = if menu estado then reageEventoMenu f estado else estado 

reageEventoMenu :: Event -> EstadoGloss -> EstadoGloss
reageEventoMenu (EventKey (SpecialKey KeyUp) Down _ _) e | tMenu e == head (imagens e) !! 0 = e {tMenu = head (imagens e) !! 3} 
                                                         | tMenu e == head (imagens e) !! 1 = e {tMenu = head (imagens e) !! 0} 
                                                         | tMenu e == head (imagens e) !! 2 = e {tMenu = head (imagens e) !! 1}
                                                         | tMenu e == head (imagens e) !! 3 = e {tMenu = head (imagens e) !! 2}

reageEventoMenu (EventKey (SpecialKey KeyDown) Down _ _) e | tMenu e == head (imagens e) !! 0 = e {tMenu = head (imagens e) !! 1} 
                                                           | tMenu e == head (imagens e) !! 1 = e {tMenu = head (imagens e) !! 2}
                                                           | tMenu e == head (imagens e) !! 2 = e {tMenu = head (imagens e) !! 3}
                                                           | tMenu e == head (imagens e) !! 3 = e {tMenu = head (imagens e) !! 0}

reageEventoMenu (EventKey (SpecialKey KeyRight) Down _ _) e | tMenu e == head (imagens e) !! 4 = e {tMenu = head (imagens e) !! 8}
                                                            | tMenu e == head (imagens e) !! 5 = e {tMenu = head (imagens e) !! 9}
                                                            | tMenu e == head (imagens e) !! 6 = e {tMenu = head (imagens e) !! 10}
                                                            | tMenu e == head (imagens e) !! 7 = e {tMenu = head (imagens e) !! 11} 
                                                            | tMenu e == head (imagens e) !! 8 = e {tMenu = head (imagens e) !! 9}
                                                            | tMenu e == head (imagens e) !! 9 = e {tMenu = head (imagens e) !! 10}
                                                            | tMenu e == head (imagens e) !! 10 = e {tMenu = head (imagens e) !! 11}
                                                            | tMenu e == head (imagens e) !! 11 = e {tMenu = head (imagens e) !! 8}
                                                            
                                                                                                                                                                                                                                                
reageEventoMenu (EventKey (SpecialKey KeyLeft) Down _ _) e | tMenu e == head (imagens e) !! 4 = e {tMenu = head (imagens e) !! 12}
                                                           | tMenu e == head (imagens e) !! 5 = e {tMenu = head (imagens e) !! 13}
                                                           | tMenu e == head (imagens e) !! 6 = e {tMenu = head (imagens e) !! 14}
                                                           | tMenu e == head (imagens e) !! 7 = e {tMenu = head (imagens e) !! 15} 
                                                           | tMenu e == head (imagens e) !! 12 = e {tMenu = head (imagens e) !! 15}
                                                           | tMenu e == head (imagens e) !! 15 = e {tMenu = head (imagens e) !! 14}
                                                           | tMenu e == head (imagens e) !! 14 = e {tMenu = head (imagens e) !! 13}
                                                           | tMenu e == head (imagens e) !! 13 = e {tMenu = head (imagens e) !! 12}
                                                                                                                       
reageEventoMenu (EventKey (SpecialKey KeyEnter) Down _ _) e | tMenu e == head (imagens e) !! 8 = e {tMenu = head (imagens e) !! 4,nJog = 1}
                                                            | tMenu e == head (imagens e) !! 9 = e {tMenu = head (imagens e) !! 5,nJog = 2}
                                                            | tMenu e == head (imagens e) !! 10 = e {tMenu = head (imagens e) !! 6,nJog = 3}  
                                                            | tMenu e == head (imagens e) !! 11 = e {tMenu = head (imagens e) !! 7,nJog = 4}  
                                                            | tMenu e == head (imagens e) !! 12 = e {tMenu = head (imagens e) !! 4,nJog = 1}
                                                            | tMenu e == head (imagens e) !! 13 = e {tMenu = head (imagens e) !! 5,nJog = 2}
                                                            | tMenu e == head (imagens e) !! 14 = e {tMenu = head (imagens e) !! 6,nJog = 3}
                                                            | tMenu e == head (imagens e) !! 15 = e {tMenu = head (imagens e) !! 7,nJog = 4} -- Dar enter e mudar o numero de jogadores
                                                            | tMenu e == head (imagens e) !! 0 = e {tMenu = (last . head $ imagens e)} -- Menu Introducao -> Menu texto da introducao
                                                            | tMenu e == head (imagens e) !! 3 = e {tMenu = head (imagens e) !! 4} -- Menu Texto de introducao -> Menu normal na posicao introducao

reageEventoMenu (EventKey (Char 'h') Down _ _) e | tMenu e == (last . head $ imagens e) = e {tMenu = head (imagens e) !! 0}
                                                 | tMenu e == head (imagens e) !! 4 = e {tMenu = head (imagens e) !! 3}
                                                 | tMenu e == head (imagens e) !! 5 = e {tMenu = head (imagens e) !! 3}
                                                 | tMenu e == head (imagens e) !! 6 = e {tMenu = head (imagens e) !! 3}
                                                 | tMenu e == head (imagens e) !! 7 = e {tMenu = head (imagens e) !! 3}

reageEventoMenu _ e = e

reageTempo :: Float -> EstadoGloss -> EstadoGloss 
reageTempo n estado = estado

desenhaEstado :: EstadoGloss -> Picture
desenhaEstado e = if menu e then desenhaMenu e else desenhaMapa (mapa e)

desenhaMenu :: EstadoGloss -> Picture
desenhaMenu e | tMenu e == head (imagens e) !! 0 = head (imagens e) !! 0
